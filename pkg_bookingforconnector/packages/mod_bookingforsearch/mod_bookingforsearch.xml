<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.4" method="upgrade">
    <!-- Name of the Module -->
	<name>BookingFor Search by Resource Type - Module</name> 
 
    <!-- The following elements are optional and free of formatting constraints -->
	<creationDate>2016-06-05</creationDate>
	<author>Bookingfor</author>
	<authorEmail>developer@ipertrade.com</authorEmail>
	<authorUrl>http://www.ipertrade.com</authorUrl>
	<copyright>Copyright (c)2006-2016 Ipertrade s.r.l.</copyright>
     <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<!--  The version string is recorded in the components table -->
	<version>2.1.8</version>
	<!-- The description is optional and defaults to the name -->
	<description>Simple module for BookingFor Search</description>
 
    <!-- Listing of all files that should be installed for the module to function -->
	<files>
        <!-- The "module" attribute signifies that this is the main controller file -->
		<filename module="mod_bookingforsearch">mod_bookingforsearch.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>assets</folder>
	</files>
 
    <!-- Optional parameters -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="startdate"
					type="calendar"
					default="NOW"
					label="MOD_BOOKINGFORSEARCH_DEFAULTVALUE_STARTDATE_LABEL"
					description="MOD_BOOKINGFORSEARCH_DEFAULTVALUE_STARTDATE_DESC"
					format="%d-%m-%Y"
					>
				</field>
				<field
					name="enddate"
					type="calendar"
					default="NOW"
					label="MOD_BOOKINGFORSEARCH_DEFAULTVALUE_ENDDATE_LABEL"
					description="MOD_BOOKINGFORSEARCH_DEFAULTVALUE_ENDDATE_DESC"
					format="%d-%m-%Y"
					>
				</field>
				<field
					name="groupbycondominium"
					type="radio"
					default="0"
					label="MOD_BOOKINGFORSEARCH_DEFAULTVALUE_GROUPBYCONDOMINIUM_LABEL"
					description="MOD_BOOKINGFORSEARCH_DEFAULTVALUE_GROUPBYCONDOMINIUM_DESC">
					<option
						value="0">JNO</option>
					<option
						 value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>